extends layout

block content

  #container
    #header
      h1#title=title
      p Welcome #{user}
    #content
      #sidebar
        h1 Your Tools!
        ul
          li: a(href='/') Manage Trips
          li: a(href='/add_trip') Add Trip
      #main
        ul
          each trip in trips
            - trip = trip.values
            li
              ul
                h3 Trip: #{trip.title}
                b Description: 
                text #{trip.description}
                br
                b Starts: 
                text #{trip.startTime}
                br
                b Ends: 
                text #{trip.endTime}
                br
                b Cost for D.O.C. members: 
                text $#{trip.costDOC}
                br
                b Cost for non-members: 
                text $#{trip.costNonDOC}
                br
                +signup(trip, user)
                br
