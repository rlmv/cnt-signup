<% include header.ejs %>
<div class="container">
	<div class="row">
		<div class="col-md-6">
			<h2> Upcoming Trips </h2>
			<ul class="list-group">	
				<% trips.forEach(function(trip){ %>

				    <% if (trip.user_signup) { %>
				        <li class="list-group-item list-group-item-success">
			    	<% } else { %>
			    	    <li class="list-group-item">
				    <% } %>

					<% include display_trip.ejs %>
					<% /*# COMMENTED OUT FOR TESTING if (trip.user_signup) { */%>
					<% if (trip.user_signup) { %>
					    <% if (trip.user_signup_type == 'leader' || 
					    	trip.user_signup_type == 'heeler') { %>
					    	<a href="/manage_trips/<%= trip.id %>">Manage</a>
					    <% } else { %>
					        <br><span class="glyphicon glyphicon-ok"></span> You are signed up for this trip as <b><%= trip.user_signup_type %></b>
					    <% } %>
					<% } else { %>
					    <% include signup_forms/trippee_signup_form.ejs %>
					<% } %>
				</li>
				<% }) %> 
			</ul>
		</div>
	</div>
</div>
<%include footer.ejs %>
