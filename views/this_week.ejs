<% include header.ejs %>
<div class="container">
	<div class="row">
		<div class="col-md-6">
			<h2> Upcoming Trips </h2>
			<ul class="list-group">	
				<% trips.forEach(function(trip){ %>

				    <% if (trip.isLeader(user)) { %>
				        <li class="list-group-item list-group-item-success">
			    	<% } else { %>
			    	<li class="list-group-item">
				    <% } %>

					<% include display_trip.ejs %>

					<% //if (trip.isLeader(user) || trip.isHeeler(user)) { %>
					<% if (false) { %>
					<a href="/manage_trips/<%= trip.id %>">Manage</a>
					<% } else if (trip.inSignups(user)){ %>
					<br><span class="glyphicon glyphicon-ok"></span> You are signed up for this trip as <b><%= trip.getSignupFor(user).type %></b>
					<% } else { %>
					    <% include signup_forms/trippee_signup_form.ejs %>
					<% } %>
				</li>
				<% }) %> 
			</ul>
		</div>
	</div>
</div>
<%include footer.ejs %>
