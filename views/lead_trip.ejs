<% include header.ejs %>
<body>
    <h2> Create a new trip </h2>
    <div id="create_trip_form">
        <form method='post' enctype='multipart/form-data' action='/create_trip'>
            Trip Title: <input type='text' name='title' style="width:200px;"><br>
            Start Date and Time: <input type='text' id='startpicker' name='start'><br>
            <script>
              $(function(){$('#startpicker').datetimepicker({minDate:'0', step:30});});
            </script> 
            End Date and Time:
            <input type='text' id='endpicker' name='end'><br>
            <script>
              $(function(){$('#endpicker').datetimepicker({minDate:'0', step:30});});
            </script>
            <!-- from http://www.webstutorial.com/jquery-allow-only-numbers/jquery -->
            Cost for D.O.C. members: <input type='text' name='costDOC' style="width:30px;" class="onlyNumbers"><br>
            Cost for non-D.O.C. members: <input type='text' name='costNonDOC' style="width:30px;" class="onlyNumbers"><br>
            Description: <br><textarea name="description" rows="5" cols="60"></textarea><br>
            <br><br>
            <% include signup_forms/signup_body %>
            <% if (user.is_leader){ %>
                <input type='submit', value='Create Trip'>
            <% }else{ %>
                <input type='submit', value='Propose Trip'>
            <% } %>
        </form>
    </div>

    <h2> Heel/Lead existing trip </h2>

    <div id="needs">
        <ul>    
            <% trips.forEach(function(trip){ %>
                <li>
                    <% include display_trip.ejs %><br>
                    <% if (trip.leader_signup){ %>
                        <% include signup_forms/heeler_signup_form.ejs %>
                    <% }else{ %>
                        <% include signup_forms/leader_signup_form.ejs %>
                    <% } %>
                    <br>
                </li>
            <% }) %> 
        </ul>
    </div>
</body>
<% include footer.ejs %>
